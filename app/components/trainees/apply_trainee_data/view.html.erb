<%= render PageTitle::View.new(title: "check_details.show") %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back to draft record",
    href: review_draft_trainee_path(@trainee),
    html_attributes: {
      id: "back-to-draft-record",
    },
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <% if @form.errors.any? %>
      <%= render "trainees/check_details/error_summary" %>
    <% end %>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds-from-desktop">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-8">
          <span class="govuk-caption-l">
            Draft record <%= "for #{trainee_name(@trainee)}" if trainee_name(@trainee).present? %>
          </span>
          Trainee Data
        </h1>

        <%= render Trainees::RouteIndicator::View.new(trainee: @trainee) %>
      </div>
    </div>

    <h2 class="govuk-heading-m">
      Personal details
    </h2>

    <%= render Trainees::Sections::View.new(trainee: @trainee, form: @form, section: :personal_details, show_incomplete: true) %>

    <%= render Trainees::Sections::View.new(trainee: @trainee, form: @form, section: :contact_details, show_incomplete: true) %>

    <%= render Trainees::Sections::View.new(trainee: @trainee, form: @form, section: :diversity, show_incomplete: true) %>

    <h2 class="govuk-heading-m">
      Education
    </h2>

    <%= render Trainees::Sections::View.new(trainee: @trainee, form: @form, section: :degrees, show_incomplete: true) %>

    <%= register_form_with(model: @form, builder: GOVUKDesignSystemFormBuilder::FormBuilder, url: trainee_apply_trainee_data_path, method: :put, local: true) do |f| %>
        <%= f.govuk_check_boxes_fieldset :mark_as_reviewed, multiple: false, legend: { text: "" } do %>
          <%= f.govuk_check_box :mark_as_reviewed, 1, 0, multiple: false, link_errors: true, label: { text: t("mark_as_reviewed") } %>
        <% end %>
      <%= hidden_field_tag :trainee_id, @trainee.slug %>
      <%= f.govuk_submit "Continue" %>
    <% end %>
  </div>
</div>

<p class="govuk-body"><%= govuk_link_to("Return to this draft record later", trainees_path, { id: "return-to-draft-later" }) %></p>
