<div class="record-outcome-action-bar">
  <%= render Trainees::RecordActions::View.new(@trainee) %>
</div>

<div class="record-details">
  <%= render Trainees::RecordDetails::View.new(trainee: @trainee, last_updated_event: last_updated_event_for(@trainee)) %>
</div>

<div class="course-details">
  <%= render Trainees::Confirmation::CourseDetails::View.new(data_model: @trainee) %>
</div>

<% if @trainee.requires_placement_details? %>
  <div class="placement-details">
    <%= render Trainees::Confirmation::PlacementDetails::View.new(trainee: @trainee) %>
  </div>
<% end %>
