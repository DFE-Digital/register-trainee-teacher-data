<%= render PageTitle::View.new(i18n_key: "trainees.deferral_details.confirm") %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLink.new(text: t(:back_to_record), href: trainee_path(@trainee)) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <span class="govuk-caption-l">
      <%= trainee_name(@trainee) %>
    </span>
    <h1 class="govuk-heading-l">Check deferral details</h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= render DeferralDetails::View.new(@deferral_form) %>

    <%= register_form_with url: trainee_confirm_deferral_path(@trainee), method: :put, local: true do |f| %>
      <%= f.govuk_submit "Defer this trainee" %>
    <%- end -%>
  </div>
</div>

<p class="govuk-body"><%= govuk_link_to(t("views.forms.common.cancel_and_return_to_record"), trainee_path(@trainee), class: "qa-cancel-link") %></p>
