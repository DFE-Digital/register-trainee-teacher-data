<%= render PageTitle::View.new(title: "trainees.not_supported_route") %>

<%= content_for(:breadcrumbs) do %>
  <%= render GovukComponent::BackLink.new(
    text: t("back"),
    href: new_trainee_path,
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= t(".heading") %>
    </h1>

    <p class="govuk-body">
      <%= t(".body") %>
    </p>

    <p class="govuk-body"><%= t(".bullet_desc") %></p>
    <ul class="govuk-list govuk-list--bullet">
      <li>
        <%= govuk_link_to t(".go_back"), new_trainee_path %>
      </li>
      <li>
        <%= govuk_link_to t(".use_dttp"), Settings.dttp.back_office_url %>
      </li>
    </ul>
  </div>
</div>
